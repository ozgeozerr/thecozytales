  <aside class="blog-sidebar">
      <!-- Recommended Posts -->
      <div class="sidebar-section">
        <h3>✨ You Might Like ✨</h3>
        {% for post in collections.latestAddedPosts | slice(0, 3) %}
          {% if post.url != page.url %}
            <div class="recommended-post">
              <a href="{{ post.url }}">
                {% if post.data.headerImage %}
                  <img src="{{ post.data.headerImage }}" alt="{{ post.data.title }}" />
                {% endif %}
                <h4>{{ post.data.title }}</h4>
                <p>{{ post.data.excerpt | slice(0, 80) }}{% if post.data.excerpt.length > 80 %}...{% endif %}</p>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>

