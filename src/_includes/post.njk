{% extends "base.njk" %}

{% block content %}
<article class="post-article">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    {% if date %}
      <p class="post-date">{{ date | date("MMMM d, yyyy") }}</p>
    {% endif %}
  </header>

  <section class="post-content">
    {{ content | safe }}
  </section>

  <footer class="post-footer">
    <a href="/game-blogs/" class="back-link">← Back to Game Blogs</a>
  </footer>
</article>
{% endblock %}
