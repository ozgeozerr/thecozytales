{% extends "base.njk" %}

{% block content %}
  <div class="blog-post-wrapper">
    <article class="blog-post">
      <h1>{{ title }}</h1>

      {% if headerImage %}
        <img src="{{ headerImage }}" alt="Header image for {{ title }}" class="post-image" />
      {% endif %}

      <div class="post-content">
        {{ content | safe }}
      </div>
    </article>
  </div>
{% endblock %}
