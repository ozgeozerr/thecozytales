<article class="post-card pixel-border">
  <a href="{{ url }}" class="post-card-link">
    {% if headerImage %}
      <img src="{{ headerImage }}" alt="Header image for {{ title }}" class="post-card-img" />
    {% endif %}
    <div class="post-card-content">
      <h2>{{ title }}</h2>
      <p>{{ excerpt }}</p>
      {% if date %}
        <time datetime="{{ date }}"><i class="far fa-calendar"></i> {{ date | date("MMMM d, yyyy") }}</time>
      {% endif %}
    </div>
  </a>
</article>
