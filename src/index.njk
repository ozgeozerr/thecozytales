<script>
document.addEventListener("DOMContentLoaded", () => {
  const track = document.querySelector("#carouselTrack");
  const slides = Array.from(track.children);
  const prevBtn = document.querySelector("#prevBtn");
  const nextBtn = document.querySelector("#nextBtn");

  const AUTO_PLAY_INTERVAL = 3000; 
  let autoPlayTimer = null;
  let isTransitioning = false;

  let currentSlide = 0;
  let slideWidth = slides[0].offsetWidth;
  const gap = 16;
  let maxSlide = slides.length - 1;

  function updateSlideWidth() {
    slideWidth = slides[0].offsetWidth + gap;
    maxSlide = slides.length - 1;
  }

  function updateCarousel() {
    const offset = -(slideWidth * currentSlide);
    track.style.transform = `translateX(${offset}px)`;
    track.style.transition = "transform 0.5s ease-in-out";
  }

  function nextSlide() {
    if (isTransitioning) return;
    isTransitioning = true;
    currentSlide = (currentSlide + 1) % (maxSlide + 1);
    updateCarousel();
    setTimeout(() => (isTransitioning = false), 600);
  }

  function prevSlide() {
    if (isTransitioning) return;
    isTransitioning = true;
    currentSlide = (currentSlide - 1 + (maxSlide + 1)) % (maxSlide + 1);
    updateCarousel();
    setTimeout(() => (isTransitioning = false), 600);
  }

  // Autoplay functions
  function startAutoPlay() {
    stopAutoPlay();
    autoPlayTimer = setInterval(() => {
      nextSlide();
    }, AUTO_PLAY_INTERVAL);
  }

  function stopAutoPlay() {
    if (autoPlayTimer) {
      clearInterval(autoPlayTimer);
      autoPlayTimer = null;
    }
  }

  function resetAutoPlay() {
    stopAutoPlay();
    startAutoPlay();
  }

  // Event listeners for user interactions to reset or stop autoplay
  [nextBtn, prevBtn, track].forEach(el => {
    if (!el) return;
    el.addEventListener("click", resetAutoPlay);
    el.addEventListener("touchstart", resetAutoPlay);
    el.addEventListener("mouseenter", stopAutoPlay);
    el.addEventListener("mouseleave", startAutoPlay);
  });

  // Fix: attach correct handlers
  nextBtn?.addEventListener("click", nextSlide);
  prevBtn?.addEventListener("click", prevSlide);

  // Swipe support
  let touchStartX = 0;
  let touchEndX = 0;

  track.addEventListener("touchstart", (e) => {
    touchStartX = e.changedTouches[0].screenX;
  });

  track.addEventListener("touchend", (e) => {
    touchEndX = e.changedTouches[0].screenX;
    const deltaX = touchStartX - touchEndX;
    if (Math.abs(deltaX) > 50) {
      deltaX > 0 ? nextSlide() : prevSlide();
    }
  });

  // Resize support
  window.addEventListener("resize", () => {
    updateSlideWidth();
    updateCarousel();
  });

  const resizeObserver = new ResizeObserver(() => {
    updateSlideWidth();
    updateCarousel();
  });
  resizeObserver.observe(track);

  // Initial setup
  updateSlideWidth();
  updateCarousel();
  startAutoPlay();
});

</script>
